<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <TableLayout
        android:id="@+id/gameboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/spot_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="70dp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/spot_four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="70dp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/spot_seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="70dp"/>
            <Button android:id="@+id/spot_nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="9"
                android:textSize="70dp"/>
        </TableRow>
    </TableLayout>

    <TextView android:id="@+id/game_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="info"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>
</LinearLayout>