<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#AED6F1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/icon_game"/>

    <TableLayout
        android:id="@+id/information_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TableRow android:gravity="center_horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="TicTacToe's Game"
                android:textColor="#000099"
                android:textSize="15sp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="By: Michael Andrés Murcia"
                android:textColor="#000099"
                android:textSize="15sp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="¡¡¡Play it at three difficulty levels!!!"
                android:textColor="#000000"
                android:textSize="15sp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="¡¡Don't let Android beats you!!"
                android:textColor="#000000"
                android:textSize="15sp"/>
        </TableRow>

        <TableRow android:gravity="center_horizontal">
            <Button
                android:id="@+id/ok_button"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/red_button"
                android:text="@string/ok"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>